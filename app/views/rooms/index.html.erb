<%= javascript_pack_tag 'javascript' %>

<p id="notice"><%= notice %></p>


<div class="container-fluid">
  <div class="row">
    
    <div class="col-3 room-side">
      <div class="card no-outline">
        <div class="card-body">
          <small>Logged In as</small><br>
          <a class="name" href="/users/edit"><b> <%= current_user.username %></b></a>,
          <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-outline-danger btn-sm ms-3" %>
        </div>
      </div>
      <hr>
      <%= render 'form', room: Room.new %>
      <hr>
      
      <h3 class="text-center mt-1 mb-3">All Rooms</h3>
      <div class="rooms">
        <% @rooms.each do |room| %>
          <%= link_to room, class: "room-link", :'data-turbolinks' => false do %>
            <% active_class = (@room == room) ? 'active' : '' %>
            <div class="card no-outline mb-2 room-card <%= active_class %>">
              <div class="card-body">
                <span class="name"><%= room.name %></span><br>
                <span class="member-count"><small><%= room.users.uniq.count %> Members</small></span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
        <div class="col-9">
          <% if @room.present? %>
            <%= render 'show' %>
          <% else %>
            <%= render 'ind' %>
          <% end %>
        </div>
      </div>
      </div>
